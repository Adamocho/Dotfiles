#!/usr/bin/env bash

# Setting the default editor
export EDITOR='nvim';

# Make Python use UTF-8 on output
export PYTHONENCODING='UTF-8';

# Increase shell history size to 10^4; the default is 500.
export HISTSIZE='10000';
export HISTFILESIZE="${HISTSIZE}";

# Omit duplicates and entries that begin with space from history.
export HISTCONTROL='ignoreboth';

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8';
export LC_ALL='en_US.UTF-8';

# Highlight manpage section titles.
export LESS_TERMCAP_md=$'\E[1;32m'     # green
export LESS_TERMCAP_mb=$'\E[1;31m'     # red
export LESS_TERMCAP_me=$'\E[0m'        # reset

# Hightlight manpage search and info at the botttom.
export LESS_TERMCAP_so=$'\E[01;33m'    # yellow
export LESS_TERMCAP_se=$'\E[0m'        # reset

# Hightlight manpage keywords, arguments, commands, etc. 
export LESS_TERMCAP_us=$'\E[1;34m'     # blue
export LESS_TERMCAP_ue=$'\E[0m'        # reset
